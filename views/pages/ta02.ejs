<!DOCTYPE html>
<html>
<head>
  <% include ../includes/header.ejs %>
</head>

<body>
  <% include ../includes/nav.ejs %>
<div class="jumbotron text-center">
  <div class="container">
    <h1><%= title %></h1>
  </div>
</div>
<div class="container">
  <form action="/ta02/addUser" method="POST">
    <input type="text" name="addUser" id="addUser">
    <button type="submit">Add User</button>
  </form>
  <ul>
    <% users.forEach(element => { %>
      <li><%= element %></li>
    <% }) %>
  </ul>
  <form action="/ta02/removeUser" method="POST">
    <input type="text" name="removeUser" id="removeUser">
    <button type="submit">Remove User</button>
  </form>
  
</div>
<div class="error-message">
  <p style="<%= message ? '' : 'display: none' %>">User not found</p>
</div>

</body>
</html>